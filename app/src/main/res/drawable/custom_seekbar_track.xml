<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the background track -->
    <item android:height="10dp"  android:gravity="center_vertical">
        <shape>
            <solid android:color="#D3D3D3"/> <!-- background track color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- This is the progress track -->
    <item android:height="10dp" android:gravity="center_vertical">
        <clip>
            <shape>
                <solid android:color="@color/blue"/> <!-- progress track color -->
                <corners android:radius="8dp" />
            </shape>
        </clip>
    </item>
</layer-list>