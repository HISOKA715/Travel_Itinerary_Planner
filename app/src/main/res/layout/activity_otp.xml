<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_register_reset.ResetPasswordActivity"
    android:background="@drawable/travel_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:paddingTop="40dp"
            android:paddingBottom="5dp"
            android:text="OTP Code"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:fontFamily="@font/roboto"
         android:text="Enter your OTP code from e-mail"
         android:textAlignment="center"
         android:textColor="@color/white"
         android:textSize="18sp"
         android:textStyle="normal"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="20dp">


                <GridLayout
                    android:id="@+id/otp_grid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="6"
                    android:rowCount="1"
                    android:padding="20dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/otp_box1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"

                        android:layout_columnWeight="1"
                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="50sp" />

                    <EditText
                        android:id="@+id/otp_box2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"

                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="50sp" />

                    <EditText
                        android:id="@+id/otp_box3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"

                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="50sp" />

                    <EditText
                        android:id="@+id/otp_box4"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"

                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="50sp" />

                    <EditText
                        android:id="@+id/otp_box5"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"

                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="50sp" />

                    <EditText
                        android:id="@+id/otp_box6"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_columnWeight="1"
                        android:background="@drawable/edit_text_background"
                        android:backgroundTint="#FFFFFF"
                        android:ems="10"

                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"
                        android:textSize="50sp" />

                </GridLayout>


        </ScrollView>

        <Button
            android:id="@+id/submitOTPBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/roboto"
            android:text="Submit OTP"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/loginSmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Login To Your Account"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>