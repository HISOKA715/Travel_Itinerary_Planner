<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarPersonalDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:title="Personal Details"
            app:titleMarginStart="70dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            android:text="Ensuring account security and preventing unauthorized access "
            android:textColor="@color/light_grey"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Contact Information"
            android:textColor="@color/Grey"
            android:textSize="16sp" />

        <EditText

            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawableTint="@color/dark_blue"
            android:drawablePadding="10dp"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText

            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_phone_24"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawableTint="@color/dark_blue"
            android:ems="10"
            android:focusable="false"
            android:inputType="phone"
            android:padding="8dp"
            android:textColor="@color/black"
            android:tag="PhoneNumber"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Basic Information"
            android:textColor="@color/Grey"
            android:textSize="16sp" />

        <EditText

            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawableTint="@color/dark_blue"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:textColor="@color/black"
            android:tag="Name"/>

        <EditText

            android:id="@+id/dateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_calendar_month_24"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawableTint="@color/dark_blue"
            android:ems="10"
            android:focusable="false"
            android:inputType="date"
            android:padding="8dp"
            android:textColor="@color/black"
            android:tag="DateOfBirth"/>

        <EditText

            android:id="@+id/homeAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawablePadding="10dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/baseline_home_filled_24"
            android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
            android:drawableTint="@color/dark_blue"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPostalAddress"
            android:padding="8dp"
            android:textColor="@color/black"
            android:tag="HomeAdd"/>

    </LinearLayout>

</FrameLayout>